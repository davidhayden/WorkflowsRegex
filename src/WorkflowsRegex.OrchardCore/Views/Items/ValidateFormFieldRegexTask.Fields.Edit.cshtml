@model ValidateFormFieldRegexTaskViewModel

<fieldset class="form-group" asp-validation-class-for="FieldName">
    <label asp-for="FieldName">@T["Field Name"] <span asp-validation-for="FieldName"></span></label>
    <input type="text" asp-for="FieldName" class="form-control" />
    <span class="hint">@T["The name of the form field to validate."]</span>
</fieldset>

<fieldset class="form-group" asp-validation-class-for="Regex">
    <label asp-for="Regex">@T["Regular Expression"] <span asp-validation-for="Regex"></span></label>
    <input type="text" asp-for="Regex" class="form-control" />
    <span class="hint">@T["The regular expression."]</span>
</fieldset>

<fieldset class="form-group" asp-validation-class-for="ErrorMessage">
    <label asp-for="ErrorMessage">@T["Error Message"] <span asp-validation-for="ErrorMessage"></span></label>
    <input type="text" asp-for="ErrorMessage" class="form-control" />
    <span class="hint">@T["The validation error message to display."]</span>
</fieldset>